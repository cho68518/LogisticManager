    <add key="Tables.Invoice.Archive" value="송장출력_사방넷원본변환_Archive" /> <!-- 아카이브용 테이블 -->

    <!-- ==================== 소분단가품목 테이블 설정 ==================== -->
    <add key="Tables.SplitPrice.Main"    value="소분단가품목" />                   <!-- 운영 환경 메인 테이블 -->
    <add key="Tables.SplitPrice.Test"    value="소분단가품목_Test" />              <!-- 테스트 환경 테이블 -->
    <add key="Tables.SplitPrice.Dev"     value="소분단가품목_Dev" />               <!-- 개발 환경 테이블 -->
    <add key="Tables.SplitPrice.Backup"  value="소분단가품목_Backup" />            <!-- 백업용 테이블 -->
    <add key="Tables.SplitPrice.Temp"    value="소분단가품목_Temp" />              <!-- 임시 처리용 테이블 -->
    <add key="Tables.SplitPrice.Archive" value="소분단가품목_Archive" />           <!-- 아카이브용 테이블 -->

